{
  "clangd.arguments": ["--background-index=false", "--header-insertion=never", "--clang-tidy"],
  "snippets.ultisnips.directories": [
    "~/.config/nvim/snippets"  // ‚Üê your custom snippet folder
  ],
  "snippets.snipmate.enable":false,
  "snippets.ultisnips.pythonPrompt": false,
  "inlayHint.enable": false,
  "clangd.fallbackFlags": ["-std=c++23"],
  "lua": {
    "runtime": {
      "version": "LuaJIT",
      "path": [
        "?.lua",
        "?/init.lua"
      ]
    },
    "diagnostics": {
      "globals": ["vim"]
    },
    "workspace": {
      "library": [
        "${3rd}/luv/library",
        "/usr/share/nvim/runtime/lua",
        "/usr/share/nvim/runtime/lua/vim",
        "/usr/share/nvim/runtime/lua/vim/lsp"
      ]
    },
    "telemetry": {
      "enable": false
    }
  }
}
