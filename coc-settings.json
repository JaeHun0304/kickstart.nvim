{
  "clangd.arguments": ["--background-index=false", "--header-insertion=never", "--clang-tidy"],
  "snippets.ultisnips.directories": [
    "~/.config/nvim/snippets"  // ‚Üê your custom snippet folder
  ],
  "snippets.snipmate.enable":false,
  "snippets.ultisnips.pythonPrompt": false,
  "inlayHint.enable": false,
  "clangd.fallbackFlags": ["-std=c++23"],
  "languageserver": {
    "lua": {
      "command": "/home/jaehjung/bin/lua-language-server",
      "args": ["-E"],
      "filetypes": ["lua"],
      "settings": {
        "Lua": {
          "runtime": {
            "version": "LuaJIT",
            "path": ["?.lua", "?/init.lua", "./lua/custom/plugins/?.lua"]
          },
          "completion": {
            "callSnippet": "Replace"
          },
          "diagnostics": {
            "globals": ["vim"]
          },
          "workspace": {
            "library": {
              "/home/jaehjung/nvim-linux-x86_64/share/nvim/runtime/lua": true,
              "~/nvim-linux-x86_64/share/nvim/runtime/lua/vim": true
            }
          }
        }
      }
    }
  }
}
